<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="Salesforce.DesignSystem.Brushes">
{% for categoryName, category in data.Color %}<!-- {{categoryName}} -->
	{% for color in category %} <SolidColorBrush x:Key="SLDS_{{color.name}}_BRUSH" Color="{StaticResource SLDS_{{color.name}}}" />
	{% endfor %}
{% endfor %}
{% for type, iconSet in icons %}{% if not('utility' in type) %}<!-- {{type | capitalize}} icon background colors -->
{% for icon in iconSet %}
	<SolidColorBrush x:Key="SLDS_{{icon.brushName}}_ICON_BACKGROUND_BRUSH" Color="{{icon.backgroundColor}}" />{% endfor %}{% endif %}
{% endfor %}
</ResourceDictionary>